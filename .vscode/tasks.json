{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "RSR: Validate Compliance",
      "type": "shell",
      "command": "just",
      "args": ["validate"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "RSR: Compliance Report",
      "type": "shell",
      "command": "just",
      "args": ["compliance-report"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Rust: Build",
      "type": "shell",
      "command": "cargo",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}/examples/rust-minimal"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Rust: Test",
      "type": "shell",
      "command": "cargo",
      "args": ["test"],
      "options": {
        "cwd": "${workspaceFolder}/examples/rust-minimal"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Rust: Clippy",
      "type": "shell",
      "command": "cargo",
      "args": ["clippy"],
      "options": {
        "cwd": "${workspaceFolder}/examples/rust-minimal"
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "TypeScript: Build",
      "type": "npm",
      "script": "build",
      "path": "examples/typescript-minimal",
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "TypeScript: Test",
      "type": "npm",
      "script": "test",
      "path": "examples/typescript-minimal",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Python: Test",
      "type": "shell",
      "command": "pytest",
      "options": {
        "cwd": "${workspaceFolder}/examples/python-minimal"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Python: Type Check",
      "type": "shell",
      "command": "mypy",
      "args": ["yaml_validator"],
      "options": {
        "cwd": "${workspaceFolder}/examples/python-minimal"
      },
      "problemMatcher": []
    }
  ]
}
